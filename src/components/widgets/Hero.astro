---
import Background from "../ui/Background.astro";
import { Icon } from "astro-icon/components";
---

<section class="relative h-screen w-full flex justify-center p-6 md:p-10">
    <Background
        style="height: calc(100vh - 60px); width: 100%; border-radius: 32px; overflow: hidden;"
    >
        <div class="relative h-full w-full flex flex-col px-[100px] py-[25px]">
            <div class="flex justify-center items-center">
                <div class="w-[60%]">
                    <h1
                        class="text-5xl md:text-7xl font-extrabold text-gray-900 leading-tight mb-[70px]"
                    >
                        Learn Smarter,Grow Faster<br />
                        <span class="text-orange-500">Succeed Anywhere</span>
                    </h1>
                    <p class="text-gray-600 max-w-md text-lg mb-[25px]">
                        Upgrade your skills with expert-led courses designed for
                        real-world success. Learn at your pace, on any device,
                        anytime.
                    </p>

                    <div class="flex items-center gap-6 pt-4">
                        <button
                            class="bg-zinc-900 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-black transition-all"
                        >
                            Start Learning Today
                        </button>

                        <div class="flex items-center gap-2">
                            <div class="flex -space-x-3">
                                <div
                                    class="w-10 h-10 rounded-full border-2 border-white bg-blue-400 overflow-hidden"
                                >
                                </div>
                                <div
                                    class="w-10 h-10 rounded-full border-2 border-white bg-orange-400 overflow-hidden"
                                >
                                </div>
                                <div
                                    class="w-10 h-10 rounded-full border-2 border-white bg-black flex items-center justify-center text-white text-xs"
                                >
                                    +
                                </div>
                            </div>
                            <div>
                                <div class="flex text-yellow-500 text-sm">
                                    ★★★★★ <span
                                        class="text-gray-900 font-bold ml-1"
                                        >4.8</span
                                    >
                                </div>
                                <p
                                    class="text-[10px] text-gray-500 uppercase font-bold"
                                >
                                    From 100k+ reviews
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="w-[40%] relative flex justify-center items-center">
                    <div
                        class="relative w-72 h-96 bg-blue-100/50 rounded-[40px] border-4 border-white/30 backdrop-blur-sm overflow-hidden flex items-end justify-center"
                    >
                        <img
                            src="/instructor.png"
                            alt="Instructor"
                            class="h-[90%] object-contain"
                        />
                    </div>
                </div>
            </div>
        </div>
    </Background>
</section>
