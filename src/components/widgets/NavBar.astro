---
import { Icon } from "astro-icon/components";
---

<nav
    id="navbar"
    class="fixed left-1/2 -translate-x-1/2 top-[65px] w-[95%] max-w-6xl z-50 transition-all duration-500 ease-in-out bg-white/40 backdrop-blur-md rounded-[20px] px-6 py-4 flex items-center justify-between"
>
    <div class="flex items-center gap-3">
        <button
            class="flex items-center gap-2 px-5 py-2 rounded-lg font-semibold text-white bg-blue-600 hover:bg-blue-700 transition"
        >
            Telegram
            <Icon name="simple-icons:telegram" class="w-4 h-4" />
        </button>
        <button
            class="px-6 py-2 rounded-lg font-semibold text-gray-800 bg-blue-100 hover:bg-blue-200 transition"
        >
            Log In
        </button>
    </div>

    <div class="hidden md:flex items-center gap-8">
        <a
            href="#"
            class="font-semibold text-gray-900 hover:text-orange-500 transition"
            >Home</a
        >
        <a
            href="#"
            class="font-medium text-gray-600 hover:text-gray-900 transition"
            >Courses</a
        >
        <a
            href="#"
            class="font-medium text-gray-600 hover:text-gray-900 transition"
            >Reviews</a
        >
        <a
            href="#"
            class="font-medium text-gray-600 hover:text-gray-900 transition"
            >Contact</a
        >
    </div>

    <div class="flex items-center gap-2">
        <span class="font-bold text-gray-800 text-lg"
            ><span class="text-[#FFB800]">Zed </span> Academy</span
        >
        <div class="bg-black rounded-full p-2">
            <img
                src="/src/assets/logo-zed.png"
                alt="logo"
                class="w-6 h-6 object-contain"
            />
        </div>
    </div>
</nav>

<script>
    const navbar = document.getElementById("navbar");

    window.addEventListener("scroll", () => {
        if (window.scrollY > 10) {
            // State when scrolling: stick to top 0
            navbar.classList.remove("top-[65px]", "w-[95%]");
            navbar.classList.add("top-[10px]", "w-full");
        } else {
            // Initial state: floating at 50px
            navbar.classList.add("top-[65px]", "w-[95%]");
            navbar.classList.remove("top-[10px]", "w-full");
        }
    });
</script>
